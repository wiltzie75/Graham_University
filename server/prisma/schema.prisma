generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Department {
  id Int @id @default(autoincrement())
  name String
  faculties Faculty[]
}

model Faculty {
  id Int @id @default(autoincrement())
  name String
  departments Department[]
}